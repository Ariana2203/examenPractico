{{> header}}
<div class="container">
   <h1>Pintores</h1>
   {{#if pintores}}
   <table class="table table-dark table-hover">
   <thead>
       <tr>
           <td>ID</td>
           <td>Nombre</td>
           <td>Nacionalidad</td>
           <td>Periodos</td>
           <td>Frases</td>
           <td>Pintura</td>
       </tr>
   </thead>
   <tbody>
       {{#each pintores}}
           <tr>
            <td>{{_id}}</td>
            <td>{{nombre}}</td>
            <td>{{nacionalidad}}</td>
            <td>{{periodos}}</td>
            <td>{{frases}}</td>
            <td><img src="../images/{{pintura}}"></td>
           </tr>
           {{/each}}
   </tbody>
   </table>
     {{ else }}
     <div>No se encuentra pintores</div>
     {{/if}}
</div>
{{>footer}}

